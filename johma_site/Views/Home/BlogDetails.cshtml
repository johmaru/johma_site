@model DataLibrary.Blog

@{
    ViewData["Title"] = "ブログ詳細";
    var theme = ViewData["Theme"] as string;
    var bodyClass = theme == "Dark" ? "dark-mode" : "light-mode";
}

<body class="@bodyClass">
<div class="container">
    <h2 class="text-decoration-underline">@Model.Title</h2>
    @if(!string.IsNullOrEmpty(Model.ImagePath))
    {
    <img src="@Model.ImagePath" alt="Blog Image" style="width: 100px; height: 100px"/>
    }
    <p>@Html.Raw(Model.Content)</p>
   
</div>
</body>