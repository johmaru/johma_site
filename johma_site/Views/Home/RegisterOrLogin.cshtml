@{
    ViewData["Title"] = "Register/Login";
    var theme = ViewData["Theme"] as string;
    var bodyClass = theme == "Dark" ? "dark-mode" : "light-mode";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<Div class="text-center">
    <h2 class="mt-5 fade-inWelcome">
        登録またはログイン
    </h2>
    <p class="fade-inWelcome" このサイトに登録またはログインしてください/>
    <h2 class="mt-3 fade-inWelcome text-decoration-underline">
        登録
    </h2>
    <form method="post" action="/Home/Register/" class="fade-inWelcome">
        <div class="form-group">
            <label for="name">名前</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">メールアドレス</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">パスワード</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">ログイン</button>
    </form>
</Div>