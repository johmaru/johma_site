@{
    ViewData["Title"] = "ログイン";
    var theme = ViewData["Theme"] as string;
    var bodyClass = theme == "Dark" ? "dark-mode" : "light-mode";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<Div class="text-center">
    
    <h2 class="mt-3 fade-inWelcome text-decoration-underline">
        ログイン
    </h2>
    <form method="post" action="/Home/LoginAcc" class="fade-inWelcome">
        <div class="form-group">
            <label for="email">メールアドレス</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">パスワード</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <a class="mt-3" href="/Home/Register">アカウントの作成</a>
        <button type="submit" class="btn btn-primary mt-3">ログイン</button>
    </form>
</Div>